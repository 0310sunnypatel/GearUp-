

    <!DOCTYPE html>
    <html>
    <head>
        <title>Gear Up!</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Merriweather:400,700" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/CSS/placeOrder.css">
        <!-- <script src="http://maps.google.com/maps/api/js?sensor=false"> type="text/javascript"</script> -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
    
    <!-- HEADER -->
    
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href="#">Gear Up!</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/"><i class="fas fa-home"></i>
                    Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/categories">Categories</a>
              </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </form>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle"></i>
                    <%=currentUser.f_name%>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="/userCart/<%=currentUser.id%>">Cart</a>
                  <a class="dropdown-item" href="/yourOrders/<%=currentUser.id%>">Orders</a>
                  <a class="dropdown-item" href="/logout">Logout</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>
    
    
    
    <!--CONTENT -->
    
        <div class="row">
            <div class="col-75">
                <div class="container">
                    <form action="/deliveryDetails/<%=currentUser.id%>" method="POST" id="My-Form">
                        <h3>Delivery Address</h3>
                        <div class="row">
                            <div class="col-50">
                                <label for="fname">Full Name</label>
                                <input type="text" id="fname" name="firstname" value="<%=currentUser.f_name+' '+currentUser.l_name%>">
                                <label for="adr">Address</label>
                                <input type="text" name="address" id="adr" >
                                <label for="state">City</label>
                                <input type="text" name="city" id="city" >
                            </div>
                            
                            <div class="col-50">
                                <label for="email">State</label>
                                <input type="text" id="state" name="state">
                                <label for="city">Pincode</label>
                                <input type="text" name="pincode" id="zip">
                                <label for="zip">Country</label>
                                <input type="text" name="country" id="country" >
                            </div>
                        </div>
                        <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="Check" onchange=getLocation()>
                                <label class="form-check-label" for="exampleCheck1">Autofill</label>
<!-- 
                                <input type="checkbox" class="form-check-input" id="Reset" onchange=resetForm()>
                                <label class="form-check-label" for="exampleCheck1">Autofill</label> -->
                                
                        </div>
                        <input type="submit" value="Confirm Order" class="btn">
                    </form>
                </div>
            </div>
    
            <div class="col-25">
                <div class="container">
                    <% var total = 0 %>
                    <h4>Cart <span class="price"><i class="fas fa-shopping-cart"></i> <b><%=cart.length%></b></span></h4>
                    <% cart.forEach(function(product){ %>
                        <p><a href="#"><%=product.name %></a> <span class="price"><%=product.price%></span></p>
                        <% total = total + parseInt(product.price)%>
                    <%})%>
                    <hr>
                    <p>Total <span class="price"><b><%=total%></b></span></p>
                </div>
          </div>
          <div id="output"></div>
        </div>
    
    
        <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
        <script src="/JS/geolocation.js"></script>
        
    
        
    </body>
    </html>
    