		<div class="container">
			<div class="heading">
				<h2>
					My Orders
				</h2>
			</div>
			<% if(!orders.length){ %>
				<p style="margin-top:4em; text-align:center">You havent ordered anything yet!</p>
				<button type="button" style="margin-left:30em" class="btn btn-success placeOrder" onclick="window.location.href='../categories'">
					Go ahead, shop!
				</button>		
			<% }else{ %>
			<% orders.forEach(function(order){ %>
				<div class="card">
  				<div class="card-header row">
    				<div class="orderNumber col-6">
    					Order Number : <%=order.id %>
    				</div>
    				<div class="orderDate col-6">
    					Ordered on : <%=order.date %>
    				</div>
  				</div>
  				<div class="card-body">
							<p>Product numbers: </p>
						<% order.productsToBuy.forEach(function(pNum){%>
							<li class="products"><%= pNum %></li>
						<%})%>
    				<!-- <h5 class="products">Li Ning Kit</h5>
    				<h5 class="products">Li Ning Kit</h5> -->
  				</div>
  				<div class="card-footer">
  					Total Amount :â‚¹<%=order.price%>
  				</div>
			</div>
			<%})}%>
		</div>

